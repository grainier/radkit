{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://radkit.dev/schemas/model-schema.json",
  "title": "Model Configuration",
  "description": "Model configuration supporting Anthropic, OpenAI, and Gemini backends. API keys are specified as environment variable names, not actual secrets.",
  "type": "object",
  "required": ["type"],
  "oneOf": [
    {
      "type": "object",
      "required": ["type", "name", "api_key_env"],
      "properties": {
        "type": {
          "const": "anthropic",
          "description": "Anthropic Claude models"
        },
        "name": {
          "type": "string",
          "description": "Model name (e.g., 'claude-3-5-sonnet-20241022')"
        },
        "api_key_env": {
          "type": "string",
          "description": "Environment variable name containing the API key (e.g., 'ANTHROPIC_API_KEY')"
        }
      }
    },
    {
      "type": "object",
      "required": ["type", "name", "api_key_env"],
      "properties": {
        "type": {
          "const": "openai",
          "description": "OpenAI models"
        },
        "name": {
          "type": "string",
          "description": "Model name (e.g., 'gpt-4o')"
        },
        "api_key_env": {
          "type": "string",
          "description": "Environment variable name containing the API key (e.g., 'OPENAI_API_KEY')"
        }
      }
    },
    {
      "type": "object",
      "required": ["type", "name", "api_key_env"],
      "properties": {
        "type": {
          "const": "gemini",
          "description": "Google Gemini models"
        },
        "name": {
          "type": "string",
          "description": "Model name (e.g., 'gemini-2.0-flash-exp')"
        },
        "api_key_env": {
          "type": "string",
          "description": "Environment variable name containing the API key (e.g., 'GEMINI_API_KEY')"
        }
      }
    }
  ]
}
