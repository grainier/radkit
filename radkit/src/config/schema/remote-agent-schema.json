{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "urn:remote-agent-schema",
  "title": "Remote Agent Configuration",
  "description": "Configuration for a remote A2A-compliant agent. Authentication headers support environment variable resolution using ${VAR_NAME} syntax.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the remote agent",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Description of the agent's capabilities"
    },
    "version": {
      "type": "string",
      "description": "Version of the agent"
    },
    "endpoint": {
      "type": "string",
      "description": "Agent endpoint URL",
      "format": "uri"
    },
    "headers": {
      "type": "object",
      "description": "Optional authentication headers. Values can contain environment variable references like ${API_TOKEN}",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "required": ["name", "description", "version", "endpoint"],
  "additionalProperties": false
}
