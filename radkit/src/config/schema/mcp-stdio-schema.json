{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://radkit.dev/schemas/mcp-stdio-schema.json",
  "title": "MCP Stdio Tool Provider",
  "description": "Schema for configuring an MCP-over-Stdio tool provider.",
  "type": "object",
  "required": ["type", "name", "command"],
  "properties": {
    "type": {
      "const": "mcp_stdio"
    },
    "name": {
      "type": "string",
      "description": "Name of the MCP Stdio connection"
    },
    "command": {
      "type": "string",
      "description": "Command to execute for the MCP server"
    },
    "args": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "Command-line arguments for the MCP server"
    },
    "env": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "default": {},
      "description": "Environment variables for the MCP server"
    },
    "timeout": {
      "type": "integer",
      "minimum": 1,
      "default": 30000,
      "description": "Timeout in milliseconds"
    },
    "tools_filter": {
      "type": ["object", "null"],
      "properties": {
        "include": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Only include tools with these names"
        },
        "exclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Exclude tools with these names"
        }
      },
      "description": "Filter which tools to expose from the MCP server"
    }
  },
  "additionalProperties": false
}
